# MongoDB connection string (example for local)
MONGODB_URI=mongodb://localhost:27017/captyon

# Server port
PORT=4000

# Comma-separated CORS origins (use '*' for permissive)
CORS_ORIGINS=http://localhost:5173

# Optional API key. If set, clients must send Authorization: Bearer <key> or x-api-key header.
API_KEY=

# Maximum allowed video upload size in megabytes (server-side enforcement).
# Default: 5
VIDEO_MAX_SIZE_MB=5
